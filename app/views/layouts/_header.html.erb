<header>
  <nav class="navbar navbar-expand navbar-light  fixed-top" style="background-color: #e3f2fd;">
    <section class="container d-flex">
      <span class="navbar-brand mb-0 h1 a">AUthMe</span>

      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "user", users_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Project", projects_path, class: "nav-link" %>
        </li>
      </ul>

        <% if current_user %>
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a clas="nav-link dropdown toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= current_user.name %>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to "Settings", "#", class: "dropdown-item" %>
                <%= link_to "My Posts", user_path(current_user), class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to "Log Out", session_path("current"), method: "delete", class: "dropdown-item" %>
              </div>
            </li>
          </ul>
        <% else %>
          <ul class="navbar-nav">
            <li class="nav-item"><%= link_to "Sign Up", new_user_path, class: "btn btn-outline-info" %></li>
            <li class="nav-item"><%= link_to "Log In", new_session_path, class: "btn btn-outline-success" %></li>
          </ul>
        <% end %>
    </section>

  </nav>
</header>
