<%= error_messages_for(@user) %>
<div class="card w-50 m-auto shadow-lg p-3 mb-5 bg-white rounded">
  <div class="card-body">
  <%= form_for(@user, class: "form-group row") do |form| %>

    <%= form.label :name %>
    <%= form.text_field :name, required:true, class: "form-control" %>

    <%= form.label :email %>
    <%= form.email_field :email, required:true, class: "form-control" %>


    <%= form.label :password, "Password" %>
    <%= form.password_field :password, required:true, class: "form-control" %>


    <%= form.label :password_confirmation, "Re-type Password" %>
    <%= form.password_field :password_confirmation, required:true, class: "form-control" %>

    <%= form.submit class: "btn btn-primary m-2" %>

    <%= link_to "Back", users_path, class: "btn btn-dark" %>

  <% end %>
  </div>
</div>
