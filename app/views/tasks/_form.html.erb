<%= error_messages_for(@feature) %>
<div class="card w-50 m-auto shadow-lg p-3 mb-5 bg-white rounded">
  <div class="card-body">
  <%= form_for([@feature, @feature.tasks.build], class: "form-group") do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, required:true, class: "form-control" %>
    </div>
    <div class="form-check">
      <%= form.check_box :completed, class: "form-check-input" %>
      <%= form.label :completed %>

    </div>
    <div class="form-group">
      <%= form.label :feature_id, "Select the User to Assign this task:" %><br>
      <%= form.collection_select :user_id, User.all, :id, :name %>
    </div>
    <%= form.submit class: "btn btn-primary m-2" %>

  <% end %>
  </div>
</div>
