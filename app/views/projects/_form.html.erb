<%= error_messages_for(@user) %>
<div class="card w-50 m-auto shadow-lg p-3 mb-5 bg-white rounded">
  <div class="card-body">
  <%= form_for(@project, class: "form-group row") do |form| %>

    <%= form.label :title %>
    <%= form.text_field :title, required:true, class: "form-control" %>

    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>

    <%= form.submit class: "btn btn-primary m-2" %>

    <%= link_to "Back", users_path, class: "btn btn-dark" %>

  <% end %>
  </div>
</div>
